---
import { type Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, title, cover, color, artists } = playlist;
const artistsString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex gap-2 p-2 rounded-lg hover:bg-zinc-700"
>
  <picture class="w-12 h-12 rounded-lg">
    <img src={cover} alt={title} />
  </picture>
  <div class="flex flex-col justify-center truncate">
    <h3 class="font-semibold text-sm">{title}</h3>
    <p class="text-xs opacity-50">{artistsString}</p>
  </div>
</a>
